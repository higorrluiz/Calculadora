<GerenciadorTelas>:
    Menu:
        name:'menu'
    Tela1:
        name:'tela1'
    Tela2:
        name:'tela2'
    Tela3:
        name:'tela3'

<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:100
        spacing:35
        canvas:
            Color:
                rgba:1,1,1,1 
            Rectangle:
                size:self.size 
                pos:self.pos 
                source:'background.jpg'
        ImageButton1:
            source:'Binario.jpg'
            on_press:app.root.current='tela1'
        ImageButton2:
            source:'decimal.jpg'
            on_press:app.root.current='tela2'
        ImageButton3:
            source:'hexadecimal.jpg'
            on_press:app.root.current='tela3'

<Tela1>:
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba:1,1,1,1 
            Rectangle:
                size:self.size 
                pos:self.pos
                source:'cinza.jpg'
        ActionView:
            size_hint_y:None
            height:60
            ActionPrevious:
                title:'Voltar'
                on_release:app.root.current='menu'
            ActionLabel:
                text:'Base 2'
        Label:
            size_hint_y:None
            height:root.height/4
            font_size:60
            id:label

        BoxLayout:
            orientation:'vertical'
            size_hint_y:None
            height:root.height/4
            Label:
                id:dec
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text:'  Decimal: '
            Label:
                id:hexa
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text:'  Hexadecimal: '
            Label:
                id:bina
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                text:'  Binario: '
        GridLayout:
            cols:3
            Button:
                text:'Digite a Base'
            Button:
                text:'C'
                on_release:root.ids.label.text= ''
                on_release:root.ids.hexa.text='  Hexadecimal: '
                on_release:root.ids.dec.text='  Decimal: '
                on_release:root.ids.bina.text='  Binario: '
            Button:
                text:'X'
                on_release:root.apagar()
            Button:
                text:'7'
                id:b7
                on_release:b7.text='7'
                on_press:b7.text='Apenas 1s e 0s'
            Button:
                text:'8'
                id:b8
                on_release:b8.text='8'
                on_press:b8.text='Apenas 1s e 0s'
            Button:
                text:'9'
                id:b9
                on_release:b9.text='9'
                on_press:b9.text='Apenas 1s e 0s'
            Button:
                text:'4'
                id:b4
                on_release:b4.text='4'
                on_press:b4.text='Apenas 1s e 0s'
            Button:
                text:'5'
                id:b5
                on_release:b5.text='5'
                on_press:b5.text='Apenas 1s e 0s'
            Button:
                text:'6'
                id:b6
                on_release:b6.text='6'
                on_press:b6.text='Apenas 1s e 0s'
            Button:
                text:'1'
                on_release:root.ids.label.text=root.ids.label.text + '1'
                on_release:root.ids.hexa.text='  Hexadecimal: '
                on_release:root.ids.dec.text='  Decimal: '
                on_release:root.ids.bina.text='  Binario: '
            Button:
                text:'2'
                id:b2
                on_release:b2.text='2'
                on_press:b2.text='Apenas 1s e 0s'
            Button:
                text:'3'
                id:b3
                on_release:b3.text='3'
                on_press:b3.text='Apenas 1s e 0s'
            Button:
                text:','
                on_release:root.ids.label.text=root.ids.label.text + ','
                on_release:root.ids.hexa.text='  Hexadecimal: '
                on_release:root.ids.dec.text='  Decimal: '
                on_release:root.ids.bina.text='  Binario: '
            Button:
                text:'0'
                on_release:root.ids.label.text=root.ids.label.text + '0'
                on_release:root.ids.hexa.text='  Hexadecimal: '
                on_release:root.ids.dec.text='  Decimal: '
                on_release:root.ids.bina.text='  Binario: '
            Button:
                text:'Enter'
                on_release:root.binario()

